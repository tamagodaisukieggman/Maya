                popupMenu;
                    menuItem 
                    -label "移動値の変更"
                    -command "optionVar -fv fyStepTrans_buttonValue_f `fy_stepTransTool_changeButtonValue uBtn_f_fyStepTransTool`";

            iconTextRadioButton   
                -label `optionVar -q "fyStepTrans_buttonValue_g"`
                -height 18
