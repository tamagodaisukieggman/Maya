                -attachForm $z_minus "top" 47
                -attachForm $z_minus "left" 78
			
                $formLayout_name;

            setParent ..;

        separator -h 2 -st none;
        
        // 移動値ボタン
        rowColumnLayout 
            -numberOfColumns 4
            -rowSpacing 1 2
            -columnSpacing 2 2
            -columnSpacing 3 2
            -columnSpacing 4 2
            -columnWidth 1 34
            -columnWidth 2 34
            -columnWidth 3 34
            -columnWidth 4 34;

            iconTextRadioCollection;
        
            iconTextRadioButton   
                -label `optionVar -q "fyStepTrans_buttonValue_a"`
                -height 18
                -style textOnly
                -bgc $botton_col $botton_col $botton_col
                -onCommand "fy_stepTransTool_radioButtonSelected uBtn_a_fyStepTransTool"
                uBtn_a_fyStepTransTool;
                popupMenu;
                    menuItem 
                    -label "移動値の変更"
