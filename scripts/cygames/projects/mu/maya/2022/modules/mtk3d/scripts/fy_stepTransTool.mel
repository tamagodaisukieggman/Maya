            iconTextRadioButton   
                -label `optionVar -q "fyStepTrans_buttonValue_c"`
                -height 18
                -style textOnly
                -bgc $botton_col $botton_col $botton_col
                -onCommand "fy_stepTransTool_radioButtonSelected uBtn_c_fyStepTransTool"
