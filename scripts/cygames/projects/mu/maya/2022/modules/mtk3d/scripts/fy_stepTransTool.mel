global proc fy_stepTransTool_changeMoveAxis()
{
    if(`optionVar -q fyStepTrans_syncTransformManip` == false)
    {
        return;
    }
    
    string $moveAxis = `optionMenu -q -value uOm_axis_fyStepTransTool`;

    //移動ツールの座標軸設定を変更
    switch($moveAxis)
    {
        case "オブジェクト":
            manipMoveContext -e -mode 0 Move;
            break;
        case "ペアレント":
            manipMoveContext -e -mode 1 Move;
            break;
        case "ワールド":
            manipMoveContext -e -mode 2 Move;
            break;
    }
}

