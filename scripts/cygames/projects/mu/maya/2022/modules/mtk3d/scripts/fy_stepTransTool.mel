            iconTextRadioButton   
                -label `optionVar -q "fyStepTrans_buttonValue_d"`
                -height 18
                -style textOnly
                -bgc $botton_col $botton_col $botton_col
                -onCommand "fy_stepTransTool_radioButtonSelected uBtn_d_fyStepTransTool"
                uBtn_d_fyStepTransTool;
                popupMenu;
                    menuItem 
                    -label "移動値の変更"
                    -command "optionVar -fv fyStepTrans_buttonValue_d `fy_stepTransTool_changeButtonValue uBtn_d_fyStepTransTool`";

            iconTextRadioButton   
