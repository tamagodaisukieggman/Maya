///////////////////////////////////////
// UI 作成
///////////////////////////////////////
global proc fy_stepTransTool()
{
    // プリファレンスに値が無ければデフォルト値を設定
    if(`optionVar -ex "fyStepTrans_selectedTab"` == 0)
    {
        // 選択しているタブのインデックス
        optionVar -iv "fyStepTrans_selectedTab" 1;
        
        // トランスフォームツールのマニピュレータ連動
        optionVar -iv "fyStepTrans_syncTransformManip" 0;
    }
    
    if (`optionVar -ex "fyStepTrans_buttonValue_a"` == 0)
    {
        // 移動値ボタンの数値
        optionVar -fv "fyStepTrans_buttonValue_a" 10;
        optionVar -fv "fyStepTrans_buttonValue_b" 5;
        optionVar -fv "fyStepTrans_buttonValue_c" 2.5;
        optionVar -fv "fyStepTrans_buttonValue_d" 1.25;
        optionVar -fv "fyStepTrans_buttonValue_e" 1;
        optionVar -fv "fyStepTrans_buttonValue_f" 0.5;
        optionVar -fv "fyStepTrans_buttonValue_g" 0.1;
        optionVar -fv "fyStepTrans_buttonValue_h" 0.01;
        
        // 選択している移動値ボタン
        optionVar -sv "fyStepTrans_selectedButtonName" "uBtn_a_fyStepTransTool";

        // 選択している移動値ボタンの数値
        optionVar -fv "fyStepTrans_selectedButtonValue" 10;

        // 選択している単位
        optionVar -iv "fyStepTrans_selectedUnit" 1;

        // 選択している座標軸
        optionVar -iv "fyStepTrans_selectedAxis" 3;
        
        // UV の保持設定
        optionVar -iv "fyStepTrans_preserveUVs" 0;

        // 1m あたりのMaya unit 数
        optionVar -fv "fyStepTrans_unitsPerMeter" 100;
    }
    
    if (`optionVar -ex "fyStepTrans_buttonValue_rot_a"` == 0)
    {
        // 回転値ボタンの数値
        optionVar -fv "fyStepTrans_buttonValue_rot_a" 180;
        optionVar -fv "fyStepTrans_buttonValue_rot_b" 120;
        optionVar -fv "fyStepTrans_buttonValue_rot_c" 90;
        optionVar -fv "fyStepTrans_buttonValue_rot_d" 60;
        optionVar -fv "fyStepTrans_buttonValue_rot_e" 45;
        optionVar -fv "fyStepTrans_buttonValue_rot_f" 30;
        optionVar -fv "fyStepTrans_buttonValue_rot_g" 22.5;
        optionVar -fv "fyStepTrans_buttonValue_rot_h" 15;
        
        // 選択している回転値ボタン
        optionVar -sv "fyStepTrans_selectedButtonName_rot" "uBtn_rot_a_fyStepTransTool";

        // 選択している回転値ボタンの数値
        optionVar -fv "fyStepTrans_selectedButtonValue_rot" 180;

        // 選択している回転中心
        optionVar -iv "fyStepTrans_selectedRotCenter" 1;

        // 選択している座標軸
        optionVar -iv "fyStepTrans_selectedAxis_rot" 1;
        
        // UV の保持設定
        optionVar -iv "fyStepTrans_preserveUVs_rot" 0;
    }

    if (`optionVar -ex "fyStepTrans_buttonValue_scale_a"` == 0)
    {
        // スケール値ボタンの数値
        optionVar -fv "fyStepTrans_buttonValue_scale_a" 2;
        optionVar -fv "fyStepTrans_buttonValue_scale_b" 1.5;
        optionVar -fv "fyStepTrans_buttonValue_scale_c" 1.25;
        optionVar -fv "fyStepTrans_buttonValue_scale_d" 1.1;
        optionVar -fv "fyStepTrans_buttonValue_scale_e" 0.75;
        optionVar -fv "fyStepTrans_buttonValue_scale_f" 0.5;
        optionVar -fv "fyStepTrans_buttonValue_scale_g" 0.25;
        optionVar -fv "fyStepTrans_buttonValue_scale_h" 0.1;
        
        // 選択しているスケール値ボタン
        optionVar -sv "fyStepTrans_selectedButtonName_scale" "uBtn_scale_a_fyStepTransTool";

        // 選択しているスケール値ボタンの数値
        optionVar -fv "fyStepTrans_selectedButtonValue_scale" 2;

        // 選択しているスケール中心
        optionVar -iv "fyStepTrans_selectedScaleCenter" 1;

        // 選択している座標軸
        optionVar -iv "fyStepTrans_selectedAxis_scale" 1;
        
        // UV の保持設定
        optionVar -iv "fyStepTrans_preserveUVs_scale" 0;

        // 均等スケール
        optionVar -iv "fyStepTrans_uniformScale_scale" 0;
    }

    // ウィンドウ作成
    if (`window -exists uWnd_fyStepTransTool` == 1)
    {
        deleteUI uWnd_fyStepTransTool;
    }

    window 
        -title "Step Transform Tool"
        -sizeable on
        -toolbox on
        -maximizeButton off
        -mb on
        -resizeToFitChildren on
        uWnd_fyStepTransTool;

        menu -l "Option";
            menuItem
                -l "単位の設定..."
                -c "layoutDialog -t \"Step Transform Tool Options\" -ui fy_stepTransTool_optionDialog"
               ;
            menuItem
                -l "座標系の指定をマニピュレータに反映する"
                -cb `optionVar -q fyStepTrans_syncTransformManip`
                -c "optionVar -iv fyStepTrans_syncTransformManip (`optionVar -q fyStepTrans_syncTransformManip`==0)"
               ;

        string $helpCmd = "python(\"import webbrowser\\nwebbrowser.open('https://wisdom.cygames.jp/pages/viewpage.action?pageId=124849367')\")";

        menu -l "Help" -helpMenu on;
            menuItem
                -l "Step Transform Tool のヘルプ"
                -c $helpCmd
               ;

    tabLayout
        -selectCommand "optionVar -iv fyStepTrans_selectedTab `tabLayout -q -selectTabIndex uTbl_fyStepTransTool`;"
        uTbl_fyStepTransTool;

    // 移動タブ作成
    fy_stepTransTool_createMoveTab;

    // 回転タブ作成
    fy_stepTransTool_createRotateTab;

    // スケールタブ作成
    fy_stepTransTool_createScaleTab;

    tabLayout -e -tabLabel uCl_move_fyStepTransTool "移動" uTbl_fyStepTransTool;
    tabLayout -e -tabLabel uCl_rotate_fyStepTransTool "回転" uTbl_fyStepTransTool;
    tabLayout -e -tabLabel uCl_scale_fyStepTransTool "スケール" uTbl_fyStepTransTool;
    tabLayout -e -selectTabIndex `optionVar -q fyStepTrans_selectedTab` uTbl_fyStepTransTool;    

    showWindow;
        
    setFocus uTbl_fyStepTransTool;
}

///////////////////////////////////////
// 移動タブを作成
///////////////////////////////////////
global proc fy_stepTransTool_createMoveTab()
{
    // 数値ボタン色
    float $botton_col = 0.365; 

    columnLayout -adj on -p uTbl_fyStepTransTool uCl_move_fyStepTransTool;
    
        //座標軸アイコンボタン
        string $formLayout_name = `formLayout -width 145 -height 135`;

            $picture = `picture -image "fy_stepTransTool/bg_trans.png" -width 135 -height 135`;

            string $x_plus = `iconTextButton 
                -style "iconOnly"
                -image1 "fy_stepTransTool/x_plus.png"
                -hi "fy_stepTransTool/x_plus_hover.png"
                -command "fy_stepTransTool_translate `optionVar -q fyStepTrans_selectedButtonValue` 0.0 0.0 1"
                `;
                
            string $x_minus = `iconTextButton 
                -style "iconOnly"
                -image1 "fy_stepTransTool/x_minus.png"
                -hi "fy_stepTransTool/x_minus_hover.png"
                -command "fy_stepTransTool_translate `optionVar -q fyStepTrans_selectedButtonValue` 0.0 0.0 -1"
                `;
                
            string $y_plus = `iconTextButton 
                -style "iconOnly"
                -image1 "fy_stepTransTool/y_plus.png"
                -hi "fy_stepTransTool/y_plus_hover.png"
                -command "fy_stepTransTool_translate 0.0 `optionVar -q fyStepTrans_selectedButtonValue` 0.0 1"
                `;
                
            string $y_minus = `iconTextButton 
                -style "iconOnly"
                -image1 "fy_stepTransTool/y_minus.png"
                -hi "fy_stepTransTool/y_minus_hover.png"
                -command "fy_stepTransTool_translate 0.0 `optionVar -q fyStepTrans_selectedButtonValue` 0.0 -1"
                `;
                
            string $z_plus = `iconTextButton 
                -style "iconOnly"
                -image1 "fy_stepTransTool/z_plus.png"
                -hi "fy_stepTransTool/z_plus_hover.png"
                -command "fy_stepTransTool_translate 0.0 0.0 `optionVar -q fyStepTrans_selectedButtonValue` 1"
                `;
                
            string $z_minus = `iconTextButton 
                -style "iconOnly"
                -image1 "fy_stepTransTool/z_minus.png"
                -hi "fy_stepTransTool/z_minus_hover.png"
