///////////////////////////////////////
// InstaLOD 起動・初期化
///////////////////////////////////////
global proc int shr_instaLodModelCreateTool_openInstaLOD()
{
    // InstaLOD ウィンドウ名
    global string $INSTALOD_CONTROL_ID_WORKSPACE;

    // InstaLOD ウィンドウが存在しない場合
    if(`workspaceControl -exists $INSTALOD_CONTROL_ID_WORKSPACE` == false)
    {
        // InstaLOD のPipeline Path 設定が正しくない場合、パスを設定
        if(`InstaLOD_IsCurrentInstaLODCmdPathValid` == false)
        {
            string $mayaAppDir = `getenv "MAYA_APP_DIR"` + "";

            string $pipelinePath = substituteAllString($mayaAppDir, "maya", "InstaLOD");

            $pipelinePath += "/InstaLODPipeline_2020b/";

            if(`filetest -d $pipelinePath`)
            {
                global string $INSTALOD_ID_INSTALODCMD_PATH;

                optionVar -sv $INSTALOD_ID_INSTALODCMD_PATH $pipelinePath;
            }
            else
            {
                confirmDialog
                    -t "LOD Model Create Tool"
                    -m "InstaLOD が無いため使用できません。"
                    -icon "critical"
                    -b "OK";

                return false;
            }
        }

        // InstaLOD 起動
        InstaLOD_MayaIntegration;
        InstaLOD;

        // InstaLOD ウィンドウ非表示
        workspaceControl -e -vis false $INSTALOD_CONTROL_ID_WORKSPACE;

        // InstaLOD 初期化
        InstaLOD_InitializeGlobals();
    }

    return true;
}

