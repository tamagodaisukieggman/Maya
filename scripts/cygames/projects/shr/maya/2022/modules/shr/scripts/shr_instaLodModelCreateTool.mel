//===============================================
//
// InstaLOD モデル作成ツール
//
//===============================================

global proc shr_instaLodModelCreateTool()
{
    // TA ツールログ送信
    shr_toolLog("InstaLOD Model Create Tool", "", "launched.");

    source "C:/cygames/shrdev/shr/tools/tp/ext/maya/2022/modules/instalod/InstaLOD_MayaIntegration.mel";
    source "shr_fixHierarchy";
    source "shr_nodeHierarchyAssistant";

    // すでにウィンドウがあれば終了
    if (`window -exists uWnd_shr_instaLodModelCreateTool` == 1)
    {
        // deleteUI uWnd_shr_instaLodModelCreateTool;
        return;
    }

    // InstaLOD 起動・初期化
    if(`shr_instaLodModelCreateTool_openInstaLOD` == false)
    {
        return;
    }

    // InstaLOD ウィンドウ名
    global string $INSTALOD_CONTROL_ID_WORKSPACE;

    // lod チェックボックス
    global string $UCB_LOD_SHR_INSTALOD[];
    clear $UCB_LOD_SHR_INSTALOD;

    // lod rowColumn レイアウト
    global string $URCL_LOD_SHR_INSTALOD[];
    clear $URCL_LOD_SHR_INSTALOD;

    // lod 削減値 int スライダー
    global string $UISG_LOD_VALUE_SHR_INSTALOD[];
    clear $UISG_LOD_VALUE_SHR_INSTALOD;

    // lod 削減設定オプションメニュー
    global string $UOM_REDUCTION_PROFILE_SHR_INSTALOD[];
    clear $UOM_REDUCTION_PROFILE_SHR_INSTALOD;

    // lod 情報 lod ラベル
    global string $UTXT_LOD_SHR_INSTALOD[];
    clear $UTXT_LOD_SHR_INSTALOD;

    // lod 情報 削減率
    global string $UTXT_LOD_VALUE_SHR_INSTALOD[];
    clear $UTXT_LOD_VALUE_SHR_INSTALOD;

    // lod 情報 削減設定
    global string $UTXT_REDUCTION_PROFILE_SHR_INSTALOD[];
    clear $UTXT_REDUCTION_PROFILE_SHR_INSTALOD;

    // lod 情報 ポリゴン数
    global string $UTXT_TRIANGLES_SHR_INSTALOD[];
    clear $UTXT_TRIANGLES_SHR_INSTALOD;

    // lod レベル
    global string $LOD_LEVELS_SHR_INSTALOD[];
    $LOD_LEVELS_SHR_INSTALOD = {
        "lod1",
        "lod2",
        "lod3",
        "lod4",
        "lod5",
        "lod6",
        "lod7"
    };

    // カスタムアトリビュートのリスト
    global string $CUSTOM_ATTRIBUTES_SHR_INSTALOD[];
    $CUSTOM_ATTRIBUTES_SHR_INSTALOD = {
        "instaLodValue",
        "instaLodProfile"
    };

    // 共有プロファイル格納場所
    global string $COMMON_PROFILES_FOLDER_SHR_INSTALOD = "C:/cygames/shrdev/shr/tools/in/ext/maya/share/presets/instalod_profiles/";

    // ローカルプロファイル格納場所
    global string $LOCAL_PROFILES_FOLDER_SHR_INSTALOD;
    $LOCAL_PROFILES_FOLDER_SHR_INSTALOD = `getenv "MAYA_APP_DIR"` + "/Presets/instaLodProfiles/";

    // ヘア用プロファイルパス
    global string $HAIR_PROFILE_PATHS_SHR_INSTALOD[];
    $HAIR_PROFILE_PATHS_SHR_INSTALOD = {
        "C:/cygames/shrdev/shr/tools/in/ext/maya/share/presets/instalod_profiles/hair_profiles/long_hair.json",
        "C:/cygames/shrdev/shr/tools/in/ext/maya/share/presets/instalod_profiles/hair_profiles/short_hair.json"
    };

    // フォルダが存在しなければ作成
    if(`filetest -d $LOCAL_PROFILES_FOLDER_SHR_INSTALOD` == false)
    {
        sysFile -makeDir $LOCAL_PROFILES_FOLDER_SHR_INSTALOD;
    }

    //プリファレンスに値が無ければデフォルト値を設定
    if (`optionVar -ex "ov_lod1_value_shr_instaLodModelCreateTool"` == 0)
    {
        shr_instaLodModelCreateTool_initPreferences;
    }
    //プリファレンスに値が無ければデフォルト値を設定 その２
    if (`optionVar -ex "ov_easeType_shr_instaLodModelCreateTool"` == 0)
    {
        shr_instaLodModelCreateTool_initPreferences2;
    }

    window
        -title "InstaLOD Model Create Tool"
        -resizeToFitChildren on
        -sizeable on
        -maximizeButton off
        -toolbox on
        -menuBar on
        -closeCommand "shr_instaLodModelCreateTool_windowCloseCommand"
        uWnd_shr_instaLodModelCreateTool;

        // メニュー
        menu -label "List";
            menuItem
                -label "リストを更新"
                -enable on
                -c "shr_instaLodModelCreateTool_updateList"
                ;

        menu -label "Help";
            menuItem
                -label "InstaLOD Model Create Tool のヘルプ"
                -c "showHelp -absolute \"https://wisdom.cygames.jp/pages/viewpage.action?pageId=488855894\""
                ;

        int $colWidth[] = {180, 120};
        int $columnSpacing = 4;
        int $rowSpacing = 2;
        int $labelHeight = 20;
        float $labelCol[] = {0.55, 0.55, 0.55};

    frameLayout -lv off -mw 8 -mh 8;
        string $form = `formLayout`;

            string $txt = `
            text
                -l "▼ 対象アセット"
                -bgc $labelCol[0] $labelCol[1] $labelCol[2]
                -h $labelHeight
                `;

            string $tsl = `
            textScrollList
                -h 130
                -allowMultiSelection true
                -sc "shr_instaLodModelCreateTool_updateLodInfo(0)"
                uTsl_asset_shr_instaLodModelCreateTool`;

            string $info = `
            columnLayout -adj on`;

                rowColumnLayout -nc 4 -rowSpacing 1 2;

                    text -l "";
                    text -l " 【削減率】 ";
                    text -l " 【削減設定】 ";
                    text -l " 【ポリゴン数】 ";

                    separator -h 7 -st "shelf";
                    separator -h 7 -st "shelf";
                    separator -h 7 -st "shelf";
                    separator -h 7 -st "shelf";

                    string $lodLevel;
                    for($lodLevel in $LOD_LEVELS_SHR_INSTALOD)
                    {
                        // lod 情報 lod ラベルテキスト
                        $UTXT_LOD_SHR_INSTALOD[`size($UTXT_LOD_SHR_INSTALOD)`] = `text -l ($lodLevel + " : ")`;

                        // lod 情報 削減率テキスト
                        $UTXT_LOD_VALUE_SHR_INSTALOD[`size($UTXT_LOD_VALUE_SHR_INSTALOD)`] = `text -l "-"`;

                        // lod 情報 削減設定テキスト
                        $UTXT_REDUCTION_PROFILE_SHR_INSTALOD[`size($UTXT_REDUCTION_PROFILE_SHR_INSTALOD)`] = `text -l "-"`;

                        $UTXT_TRIANGLES_SHR_INSTALOD[`size($UTXT_TRIANGLES_SHR_INSTALOD)`] = `text -l "-"`;
                    }

                    separator -h 4 -st "none";
                    separator -h 4 -st "none";
                    separator -h 4 -st "none";
                    separator -h 4 -st "none";

                    setParent ..;

                    rowLayout -nc 2;
                        button -l "GUI に反映" -w 80 -h 20 -c "shr_instaLodModelCreateTool_pasteParams(0)";
                        button -l "クリップボードに保持" -w 120 -h 20 -c "shr_instaLodModelCreateTool_copyParams";
                        setParent ..;

                    separator -h 8 -st "none";

                setParent ..;

        string $sep0 = `separator -st "in"`;

        string $rcl = `
        rowColumnLayout
            -nc 2
            -rowSpacing 1 $rowSpacing
            -adjustableColumn 2
            -columnAttach 1 "both" 1
            `;

            text -l "";

            rowColumnLayout
                -nc 2
                -adjustableColumn 1
                -columnSpacing 1 $columnSpacing
                -columnSpacing 2 $columnSpacing
                -columnWidth 1 $colWidth[0]
                -columnWidth 2 $colWidth[1]
                -columnAlign 1 "left"
                -columnAlign 2 "left"
                ;

                text
                    -l "    ▼  削減率（100 が削減なし）"
                    -bgc $labelCol[0] $labelCol[1] $labelCol[2]
                    -h $labelHeight
                    ;


                text
                    -l "    ▼  削減設定"
                    -bgc $labelCol[0] $labelCol[1] $labelCol[2]
                    -h $labelHeight
                    ;

                setParent..;

            for($lodLevel in $LOD_LEVELS_SHR_INSTALOD)
            {
                int $value = `optionVar -q ("ov_" + $lodLevel + "_checked_shr_instaLodModelCreateTool")`;

                string $temp = `checkBox
                                    -l ($lodLevel + " :")
                                    -v $value
                                    `;

                checkBox -e
                    -onc ("shr_instaLodModelCreateTool_checkBoxCommand(1,\"" + $temp + "\")")
                    -ofc ("shr_instaLodModelCreateTool_checkBoxCommand(0,\"" + $temp + "\")")
                    $temp;

                $UCB_LOD_SHR_INSTALOD[`size($UCB_LOD_SHR_INSTALOD)`] = $temp;

                    $temp = `rowColumnLayout
                        -en $value
                        -nc 2
                        -adjustableColumn 1
                        -columnSpacing 1 $columnSpacing
                        -columnSpacing 2 $columnSpacing
                        -columnWidth 1 $colWidth[0]
                        -columnWidth 2 $colWidth[1]
                        `;

                    $URCL_LOD_SHR_INSTALOD[`size($URCL_LOD_SHR_INSTALOD)`] = $temp;

                        float $fvalue = `optionVar -q ("ov_" + $lodLevel + "_value_shr_instaLodModelCreateTool")`;

                        $temp = `floatSliderGrp
                            -field true
                            -columnWidth 1 60
                            -pre 2
                            -v $fvalue
                            `;

                        $UISG_LOD_VALUE_SHR_INSTALOD[`size($UISG_LOD_VALUE_SHR_INSTALOD)`] = $temp;

                        $temp = `optionMenu `;

                        optionMenu -e -beforeShowPopup ("shr_instaLodModelCreateTool_updateOptionMenu({\"" + $temp + "\"})") $temp;

                        // オプションメニュー項目作成
                        shr_instaLodModelCreateTool_updateOptionMenu({$temp});

                        $UOM_REDUCTION_PROFILE_SHR_INSTALOD[`size($UOM_REDUCTION_PROFILE_SHR_INSTALOD)`] = $temp;

                        string $profile = `optionVar -q ("ov_" + $lodLevel + "_profile_shr_instaLodModelCreateTool")`;

                        // 前回選択していた項目が無ければdefault を選択
                        if(catchQuiet(`optionMenu -e -v $profile $temp`))
                        {
                            optionMenu -e -sl 1 $temp;
                        }

                        setParent ..;
            }

                separator -st "in" -h 8;
                separator -st "in" -h 8;

                text -l "一括設定 :";

                rowColumnLayout
                    -en on
                    -nc 2
                    -adjustableColumn 1
                    -columnSpacing 1 $columnSpacing
                    -columnSpacing 2 $columnSpacing
                    -columnWidth 1 $colWidth[0]
                    -columnWidth 2 $colWidth[1]
                    ;

                    rowColumnLayout
                        -nc 2
                        -adjustableColumn 2
                        -columnAlign 1 "right"
                        -rowSpacing 1 $rowSpacing
                        ;

                        text -l "最大LOD : ";

                        optionMenu
                            -cc "shr_instaLodModelCreateTool_setMaxLodLevel; shr_instaLodModelCreateTool_setLodValues(\"\")"
                            uOm_maxLodLevel_shr_instaLodModelCreateTool;

                        for($lodLevel in $LOD_LEVELS_SHR_INSTALOD)
                        {
                            if($lodLevel != "lod1")
                            {
                                menuItem -l $lodLevel;
                            }
                        }

                        optionMenu -e -v `optionVar -q ov_maxLodLevel_shr_instaLodModelCreateTool` uOm_maxLodLevel_shr_instaLodModelCreateTool;

                        text -l "削減率 : ";

                        floatSliderGrp
                            -field true
                            -columnWidth 1 40
                            -pre 2
                            -v `optionVar -q ov_endValue_shr_instaLodModelCreateTool`
                            -cc "shr_instaLodModelCreateTool_setLodValues(\"end\")"
                            -dc "shr_instaLodModelCreateTool_setLodValues(\"end\")"
                            uIsg_endValue_shr_instaLodModelCreateTool;

                        text -l "" -h 5;
                        text -l "" -h 5;

                        text -l "イージング : ";

                        optionMenu
                            -cc "shr_instaLodModelCreateTool_setLodValues(\"\")"
                            uOm_easeType_shr_instaLodModelCreateTool;
                            menuItem -l "線形";
                            menuItem -l "2次";
                            menuItem -l "3次";
                            menuItem -l "4次";
                            menuItem -l "5次";
                            menuItem -l "指数";
                            menuItem -l "円形";

                        optionMenu -e -v `optionVar -q ov_easeType_shr_instaLodModelCreateTool` uOm_easeType_shr_instaLodModelCreateTool;

                        text -l "バイアス : ";

                        floatSliderGrp
                            -field true
                            -columnWidth 1 40
                            -adjustableColumn 2
                            -pre 2
                            -v `optionVar -q ov_biasValue_shr_instaLodModelCreateTool`
                            -cc "shr_instaLodModelCreateTool_setLodValues(\"bias\")"
                            -dc "shr_instaLodModelCreateTool_setLodValues(\"bias\")"
                            -min -1.0
                            -max 1.0
                            uFsg_bias_shr_instaLodModelCreateTool;

                        setParent ..;

                    frameLayout -lv off;

                    optionMenu -h 24 uOm_setAllProfile_shr_instaLodModelCreateTool;
                        optionMenu -e -beforeShowPopup ("shr_instaLodModelCreateTool_updateOptionMenu({\"uOm_setAllProfile_shr_instaLodModelCreateTool\"})") uOm_setAllProfile_shr_instaLodModelCreateTool;
                        optionMenu -e -changeCommand "shr_instaLodModelCreateTool_setAllProfile(\"#1\")" uOm_setAllProfile_shr_instaLodModelCreateTool;

                        // オプションメニュー項目作成
                        shr_instaLodModelCreateTool_updateOptionMenu({"uOm_setAllProfile_shr_instaLodModelCreateTool"});
                        optionMenu -e -sl 1 uOm_setAllProfile_shr_instaLodModelCreateTool;
                        setParent..;

                    setParent ..;
            setParent ..;

        string $sep = `separator -st "in"`;

        string $bt = `
        button
            -l "LOD モデル作成"
            -bgc 0.5 0.6 0.5
            -c "shr_instaLodModelCreateTool_createButtonCommand"
            `;

        string $bt2 = `
        button
            -l "InstaLOD GUI"
            -bgc 1.0 0.184 0.552
            -c "shr_instaLodModelCreateTool_toggleInstaLodWindow"
            `;

        string $bt3 = `
        button
            -l "▼"
            -bgc 1.0 0.184 0.552
            -c ""
            `;
            popupMenu
                -b 1
                -postMenuCommand "shr_instaLodModelCreateTool_postMenuCommand"
                ;
                menuItem
                    -l "InstaLOD GUI の現在の設定を 削減設定に追加..."
                    -command "shr_instaLodModelCreateTool_addProfile"
                    uMi_addProfile_shr_instaLodModelCreateTool;

                menuItem
                    -l "削減設定のリネーム・削除..."
                    -c "shr_instaLodModelCreateTool_openEditProfileDialog"
                    ;

                menuItem -d true;

                menuItem
                    -l "InstaLOD GUI の設定をデフォルトに戻す"
                    -c "shr_instaLodModelCreateTool_resetSettings"
                    uMi_resetSettings_shr_instaLodModelCreateTool;

        int $cbValue = `optionVar -q ov_notCopySkinWeights_shr_instaLodModelCreateTool`;
        string $cb = `checkBox -l "LOD モデルにスキンウェイトをコピーしない" -v $cbValue uCb_notCopySkinWeights_shr_instaLodModelCreateTool`;

            formLayout -e
                -attachForm    $txt "left" 0
                -attachForm    $txt "right" 0
                -attachForm    $txt "top" 0
                -attachNone    $txt "bottom"

                -attachForm    $tsl "left" 0
                -attachPosition $tsl "right" 0 42
                -attachControl $tsl "top" 4 $txt
                -attachControl $tsl "bottom" 8 $sep0

                -attachForm    $info "right" 0
                -attachPosition $info "left" 0 45
                -attachControl $info "top" 4 $txt
                -attachNone $info "bottom"

                -attachForm    $sep0 "left" 0
                -attachForm    $sep0 "right" 0
                -attachNone    $sep0 "top"
                -attachControl $sep0 "bottom" 8 $rcl

                -attachForm    $rcl "left" 0
                -attachForm    $rcl "right" 0
                -attachNone    $rcl "top"
                -attachControl $rcl "bottom" 4 $sep

                -attachForm    $sep "left" 0
                -attachForm    $sep "right" 0
                -attachNone    $sep "top"
                -attachControl $sep "bottom" 8 $bt

                -attachForm    $bt "left" 0
                -attachPosition  $bt "right" 0 60
                -attachNone    $bt "top"
                -attachControl    $bt "bottom" 8 $cb

                -attachControl  $bt2 "left" 4 $bt
                -attachControl    $bt2 "right" 0 $bt3
                -attachNone    $bt2 "top"
                -attachControl    $bt2 "bottom" 8 $cb

                -attachNone  $bt3 "left"
                -attachForm    $bt3 "right" 0
                -attachNone    $bt3 "top"
                -attachControl    $bt3 "bottom" 8 $cb

                -attachForm  $cb "left" 8
                -attachPosition  $cb "right" 0 60
                -attachNone    $cb "top"
                -attachForm    $cb "bottom" 0
                $form;

    // リスト更新
    shr_instaLodModelCreateTool_updateList;

    // lod 情報更新
    shr_instaLodModelCreateTool_updateLodInfo(0);

    showWindow;

    // スクリプトジョブ設定（シーンオープン時）
    scriptJob -event "SceneOpened" "shr_instaLodModelCreateTool_updateList; shr_instaLodModelCreateTool_updateLodInfo(0);" -parent uWnd_shr_instaLodModelCreateTool;
}

///////////////////////////////////////
// クリップボードに設定をコピー
///////////////////////////////////////
global proc shr_instaLodModelCreateTool_copyParams()
{
    //すでにウィンドウがあれば終了
    if (`window -exists uWnd_clipboard_shr_instaLodModelCreateTool` == 1)
    {
        shr_instaLodModelCreateTool_updateLodInfo(1);

        return;
    }

    // lod レベル
    global string $LOD_LEVELS_SHR_INSTALOD[];

    // lod 情報 lod ラベル クリップボード
    global string $UTXT_LOD_CLIPBOARD_SHR_INSTALOD[];
    clear $UTXT_LOD_CLIPBOARD_SHR_INSTALOD;

    // lod 情報 削減率 クリップボード
    global string $UTXT_LOD_VALUE_CLIPBOARD_SHR_INSTALOD[];
    clear $UTXT_LOD_VALUE_CLIPBOARD_SHR_INSTALOD;

    // lod 情報 削減設定 クリップボード
    global string $UTXT_REDUCTION_PROFILE_CLIPBOARD_SHR_INSTALOD[];
    clear $UTXT_REDUCTION_PROFILE_CLIPBOARD_SHR_INSTALOD;

    // lod 情報 ポリゴン数 クリップボード
    global string $UTXT_TRIANGLES_CLIPBOARD_SHR_INSTALOD[];
    clear $UTXT_TRIANGLES_CLIPBOARD_SHR_INSTALOD;

    window
        -title "InstaLOD Model Create Tool - Clipboard"
        -resizeToFitChildren on
        -sizeable off
        -maximizeButton off
        -toolbox on
        -menuBar off
        -parent "uWnd_shr_instaLodModelCreateTool"
        uWnd_clipboard_shr_instaLodModelCreateTool;

        frameLayout -lv off -mh 8 -mw 8;
            rowColumnLayout -nc 4 -rowSpacing 1 2;

                text -l "";
                text -l " 【削減率】 ";
                text -l " 【削減設定】 ";
                text -l " 【ポリゴン数】 ";

                separator -h 7 -st "shelf";
                separator -h 7 -st "shelf";
                separator -h 7 -st "shelf";
                separator -h 7 -st "shelf";

                string $lodLevel;
                for($lodLevel in $LOD_LEVELS_SHR_INSTALOD)
                {
                    // lod 情報 lod ラベルテキスト
                    $UTXT_LOD_CLIPBOARD_SHR_INSTALOD[`size($UTXT_LOD_CLIPBOARD_SHR_INSTALOD)`] = `text -l ($lodLevel + " : ")`;

                    // lod 情報 削減率テキスト
                    $UTXT_LOD_VALUE_CLIPBOARD_SHR_INSTALOD[`size($UTXT_LOD_VALUE_CLIPBOARD_SHR_INSTALOD)`] = `text -l "-"`;

                    // lod 情報 削減設定テキスト
                    $UTXT_REDUCTION_PROFILE_CLIPBOARD_SHR_INSTALOD[`size($UTXT_REDUCTION_PROFILE_CLIPBOARD_SHR_INSTALOD)`] = `text -l "-"`;

                    $UTXT_TRIANGLES_CLIPBOARD_SHR_INSTALOD[`size($UTXT_TRIANGLES_CLIPBOARD_SHR_INSTALOD)`] = `text -l "-"`;
                }

                setParent ..;

            button -l "GUI に反映" -h 20 -c "shr_instaLodModelCreateTool_pasteParams(1)";

            setParent ..;
        setParent ..;

    showWindow;

    shr_instaLodModelCreateTool_updateLodInfo(1);
}

///////////////////////////////////////
// 設定をGUI に反映
///////////////////////////////////////
global proc shr_instaLodModelCreateTool_pasteParams(int $method)
{
    // lod レベル
    global string $LOD_LEVELS_SHR_INSTALOD[];

    // lod 情報 lod ラベル
    string $utxt_lod[];

    // lod 情報 削減率
    string $utxt_lod_value[];

    // lod 情報 削減設定
    string $utxt_reduction_profile[];

    // lod 情報 トライアングル数
    string $utxt_triangles[];

    // 通常の場合
    if($method == 0)
    {
        // lod 情報 lod ラベル
        global string $UTXT_LOD_SHR_INSTALOD[];

        // lod 情報 削減率
        global string $UTXT_LOD_VALUE_SHR_INSTALOD[];

        // lod 情報 削減設定
        global string $UTXT_REDUCTION_PROFILE_SHR_INSTALOD[];

        $utxt_lod = $UTXT_LOD_SHR_INSTALOD;
        $utxt_lod_value = $UTXT_LOD_VALUE_SHR_INSTALOD;
        $utxt_reduction_profile = $UTXT_REDUCTION_PROFILE_SHR_INSTALOD;
    }
    // クリップボードからペーストの場合
    else
    {
        // lod 情報 lod ラベル クリップボード
        global string $UTXT_LOD_CLIPBOARD_SHR_INSTALOD[];

        // lod 情報 削減率 クリップボード
        global string $UTXT_LOD_VALUE_CLIPBOARD_SHR_INSTALOD[];

        // lod 情報 削減設定 クリップボード
        global string $UTXT_REDUCTION_PROFILE_CLIPBOARD_SHR_INSTALOD[];

        $utxt_lod = $UTXT_LOD_CLIPBOARD_SHR_INSTALOD;
        $utxt_lod_value = $UTXT_LOD_VALUE_CLIPBOARD_SHR_INSTALOD;
        $utxt_reduction_profile = $UTXT_REDUCTION_PROFILE_CLIPBOARD_SHR_INSTALOD;
    }

    // lod チェックボックス
    global string $UCB_LOD_SHR_INSTALOD[];

    // lod rowColumn レイアウト
    global string $URCL_LOD_SHR_INSTALOD[];

    // lod 削減値 int スライダー
    global string $UISG_LOD_VALUE_SHR_INSTALOD[];

    // lod 削減設定オプションメニュー
    global string $UOM_REDUCTION_PROFILE_SHR_INSTALOD[];

    string $elm;

    int $index;

    for($elm in $utxt_lod)
    {
        int $isEnabled = `text -q -en $elm`;

        checkBox -e -v $isEnabled $UCB_LOD_SHR_INSTALOD[$index];

        if($isEnabled)
        {
            string $l = `text -q -l $utxt_lod_value[$index]`;

            if($l != "情報なし")
            {
                float $lod_value = (float)$l;

                floatSliderGrp -e -v $lod_value $UISG_LOD_VALUE_SHR_INSTALOD[$index];
            }

            $l = `text -q -l $utxt_reduction_profile[$index]`;

            if($l != "情報なし")
            {
                // 項目が無ければdefault を選択
                if(catchQuiet(`optionMenu -e -v $l $UOM_REDUCTION_PROFILE_SHR_INSTALOD[$index]`))
                {
                    optionMenu -e -sl 1 $UOM_REDUCTION_PROFILE_SHR_INSTALOD[$index];
                }
            }
        }

        rowColumnLayout -e -en $isEnabled $URCL_LOD_SHR_INSTALOD[$index];

        $index += 1;
    }
}

