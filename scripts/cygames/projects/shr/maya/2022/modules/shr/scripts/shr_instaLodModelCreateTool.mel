///////////////////////////////////////
// 作成ボタンコマンド
///////////////////////////////////////
global proc shr_instaLodModelCreateTool_createButtonCommand()
{
    // リストで選択している項目を取得
    string $selItems[] = `textScrollList -q -selectItem uTsl_asset_shr_instaLodModelCreateTool`;

    // リストで項目が選択されていなければ終了
    if(`size($selItems)` == 0)
    {
        confirmDialog
            -t "InstaLOD Model Create Tool"
            -m "対象のアセットがリストで選択されていません。"
            -icon "warning"
            -b "OK";

        return;
    }

    // lod チェックボックス
    global string $UCB_LOD_SHR_INSTALOD[];

    string $elm;
    int $checked;

    for($elm in $UCB_LOD_SHR_INSTALOD)
    {
        $checked += `checkBox -q -v $elm`;
    }

    // LOD チェックボックスにチェックが入っていなければ終了
    if($checked == 0)
    {
        confirmDialog
            -t "InstaLOD Model Create Tool"
            -m "作成するLOD レベルにチェックを入れてください。"
            -icon "warning"
            -b "OK";

        return;
    }

    // 実行確認
    string $confirm = `confirmDialog
        -title "InstaLOD Model Create Tool"
        -message "LOD モデルを作成します。"
        -button "作成"
        -button "キャンセル"
        -defaultButton "作成"
        -cancelButton "キャンセル"
        -dismissString "キャンセル"
        `;

        if($confirm == "キャンセル")
        {
            return;
        }

    // InstaLOD 起動
    shr_instaLodModelCreateTool_openInstaLOD;

    // lod rowColumn レイアウト
    global string $URCL_LOD_SHR_INSTALOD[];

    // lod 削減値 int スライダー
    global string $UISG_LOD_VALUE_SHR_INSTALOD[];

    // lod 削減設定オプションメニュー
    global string $UOM_REDUCTION_PROFILE_SHR_INSTALOD[];

    // lod レベル
    global string $LOD_LEVELS_SHR_INSTALOD[];

    // 削減設定プロファイルパス
    global string $PROFILE_PATH_SHR_INSTALOD[];

    // 一時プロファイルフォルダ
    string $tempProfileFolder = `getenv "TMPDIR"` + "/shr_instaLodModelCreateTool";

    if(`filetest -d $tempProfileFolder` == false)
    {
        sysFile -md $tempProfileFolder;
    }

    // 一時プロファイルパス
    string $tempProfilePath = $tempProfileFolder + "/temp.json";

    // 作成されたLOD ノード
    string $lodNodes[];

    string $selItem;

    for($selItem in $selItems)
    {
        // lodGroup ノードを取得
        string $lodGroupNode = shr_instaLodModelCreateTool_getLodGroupNode($selItem);

        // lod0 ノードを取得
        string $targetModelNode = shr_instaLodModelCreateTool_getLodNode($selItem, "lod0");

        // lod0 ノードがない場合、次のループへ
        if($targetModelNode == "")
        {
            string $message = $selItem + " lod0 ノードが存在しないため処理をスキップします。";

            confirmDialog
                -t "InstaLOD Model Create Tool"
                -m $message
                -icon "warning"
                -b "OK";

            continue;
        }

        string $checkBox;

        int $index;

        string $progressMessage;

        progressWindow
            -t "InstaLOD Model Create Tool"
            -isInterruptable false
            -status "\nLOD 作成中...\n"
            -max $checked;

        for($checkBox in $UCB_LOD_SHR_INSTALOD)
        {
            if(`checkBox -q -v $checkBox`)
            {
                // LOD レベル
                string $lodLevel = $LOD_LEVELS_SHR_INSTALOD[$index];

                $progressMessage = "\n" + $lodLevel + " : 作成中...\n";

                progressWindow -e -status $progressMessage -progress $index;
                refresh;

                // 値
                float $lodValue =  `floatSliderGrp -q -v $UISG_LOD_VALUE_SHR_INSTALOD[$index]`;

                // 削減設定インデックス
                int $reductionProfileIndex = `optionMenu -q -select $UOM_REDUCTION_PROFILE_SHR_INSTALOD[$index]` - 1;

                // 削減設定名
                string $reductionProfileName = `optionMenu -q -value $UOM_REDUCTION_PROFILE_SHR_INSTALOD[$index]`;

                // 対象lod0 ノード選択
                // select -r $targetModelNode;

                // エラーなどで残ってしまった作業用ノードがあれば削除
                string $garbageNodes[] = `ls "|__instalod_temp*"`;
                if(`size($garbageNodes)` != 0)
                {
                    delete $garbageNodes;
                }

                // 対象lod ノードを複製
                string $dupedTargetModelNode[] = `duplicate -rr -name "__instalod_temp" $targetModelNode `;

                // アンペアレント
                $dupedTargetModelNode = `parent -w $dupedTargetModelNode`;

                // 並びを先頭に
                // InstaLOD 実行後、ショートネームが同じものがあると最初に見つかったものを対象としてしまう問題に対処するため
                reorder -front $dupedTargetModelNode;

                //複製lod0 ノード以下のmesh ノードを取得
                string $lod0MeshShapeNodes[] = `listRelatives -allDescendents -noIntermediate -type "mesh" -f $dupedTargetModelNode`;

                // mesh ノードの親トランスフォームノードを取得
                string $lod0MeshNodes[] = `listRelatives -f -p $lod0MeshShapeNodes`;

                // 重複を削除
                $lod0MeshNodes = stringArrayRemoveDuplicates($lod0MeshNodes);

                // スキンウェイトをコピーする場合
                if(`checkBox -q -v uCb_notCopySkinWeights_shr_instaLodModelCreateTool` == false)
                {
                    // 元のlod0 ノード以下のmesh ノードを取得
                    string $sourceMeshShapeNodes[] = `listRelatives -allDescendents -noIntermediate -type "mesh" -f $targetModelNode`;

                    // mesh ノードの親トランスフォームノードを取得
                    string $sourceMeshNodes[] = `listRelatives -f -p $sourceMeshShapeNodes`;

                    // 重複を削除
                    $sourceMeshNodes = stringArrayRemoveDuplicates($sourceMeshNodes);

                    int $i;

                    for($i = 0; $i<`size($lod0MeshNodes)`; $i++)
                    {
                        // NOTE: MtkHistory
                        python("from shr.utils.history import MtkHistory");
                        python("MtkHistory._bind_and_copy_weights('" + $sourceMeshNodes[$i] + "','" + $lod0MeshNodes[$i] + "')");
                    }
                }

                // 作成されたノード
                string $createdNodes[];

                // 削減設定がInstaLOD GUI の場合
                if($reductionProfileName == "InstaLOD GUI")
                {
                    // 削減方法
                    optionVar -sv "INSTALOD_ID_OPTIMIZE_TYPE" "Optimize";

                    // 値
                    optionVar -fv "INSTALOD_ID_OP_PERCENTTRIANGLES" $lodValue;
                    optionVar -iv "INSTALOD_ID_OP_ABSOLUTETRIANGLES" 0;
                    optionVar -iv "INSTALOD_ID_OP_SCREENSIZEINPIXELS" 0;

                    // InstaLOD 実行
                    InstaLOD_OptimizeMeshes($lod0MeshNodes, "", false);

                    // 作成されたノードを取得
                    $createdNodes = `ls -sl`;
                }
                // 削減設定がInstaLOD GUI 以外の場合
                else
                {
                    // 削減設定プロファイルのパス
                    string $reductionProfilePaths[];
                    $reductionProfilePaths[0] = $PROFILE_PATH_SHR_INSTALOD[$reductionProfileIndex];

                    // キャラクターの場合
                    if($reductionProfileName == "character")
                    {
                        // ヘア用プロファイルパス
                        global string $HAIR_PROFILE_PATHS_SHR_INSTALOD[];

                        // ヘア用プロファイルを追加
                        $reductionProfilePaths = stringArrayCatenate($reductionProfilePaths, $HAIR_PROFILE_PATHS_SHR_INSTALOD);
                    }

                    string $reductionProfilePath;

                    for($reductionProfilePath in $reductionProfilePaths)
                    {
                        // プロファイル内容をすべて読み込み
                        string $allProfileText = freadAllText($reductionProfilePath);

                        // プロファイル内容を分割
                        string $lines[] = stringToStringArray($allProfileText, "\n");

                        string $line;
                        int $count;

                        for($line in $lines)
                        {
                            // Percent Triangles の値を設定
                            if(`gmatch $line "*PercentTriangles*"`)
                            {
                                $lines[$count] = ("\"PercentTriangles\" : " + $lodValue / 100.0 + ",");
                            }

                            // Absolute Triangles の値を設定
                            if(`gmatch $line "*AbsoluteTriangles*"`)
                            {
                                $lines[$count] = "\"AbsoluteTriangles\" : 0,";
                            }

                            // Screen Size In Pixels の値を設定
                            if(`gmatch $line "*ScreenSizeInPixels*"`)
                            {
                                $lines[$count] = "\"ScreenSizeInPixels\" : 0,";
                            }

                            $count += 1;
                        }

                        $allProfileText = stringArrayToString($lines, "\n");

                        // 一時ファイルに書き込み
                        fwriteAllText($tempProfilePath, $allProfileText);

                        // リダクション対象メッシュリスト
                        string $targetNodes[] = $lod0MeshNodes;

                        // キャラクターの場合
                        if($reductionProfileName == "character")
                        {
                            // 短髪と長髪のメッシュを取得
                            string $longHairMeshes[] = shr_instaLodModelCreateTool_getHairMeshes(0, $lod0MeshNodes);
                            string $shortHairMeshes[] = shr_instaLodModelCreateTool_getHairMeshes(1, $lod0MeshNodes);

                            // プロファイルのファイル名
                            string $profile_name = basenameEx($reductionProfilePath);

                            // リダクション対象メッシュを設定
                            if($profile_name == "long_hair")
                            {
                                $targetNodes = $longHairMeshes;
                            }
                            else if($profile_name == "short_hair")
                            {
                                $targetNodes = $shortHairMeshes;
                            }
                            else
                            {
                                $targetNodes = stringArrayRemoveExact($longHairMeshes, $lod0MeshNodes);
                                $targetNodes = stringArrayRemoveExact($shortHairMeshes, $targetNodes);
                            }
                        }

                        if(`size($targetNodes)` != 0)
                        {
                            select -r $targetNodes;

                            progressWindow -e -status ($progressMessage + "profile: " + basenameEx($reductionProfilePath));
                            refresh;

                            // InstaLOD 実行
                            InstaLOD_OptimizeMeshes($targetNodes, $tempProfilePath, false);

                            // 作成されたノードを取得
                            $createdNodes = stringArrayCatenate($createdNodes, `ls -sl`);
                        }
                    }
                }

                // 元のmesh ノードを削除
                delete $lod0MeshNodes;

                // 作成されたノード
                string $createdNode;

                string $reverse[];

                // 親ノードに _INSTALOD が付いたときに先にリネームされてしまうので、子ノードのリネームが先になるように配列の要素を逆順にする
                for($createdNode in $createdNodes)
                {
                    stringArrayInsertAtIndex(0, $reverse, $createdNode);
                }

                $createdNodes = $reverse;

                for($createdNode in $createdNodes)
                {
                    string $tokens[];

                    // ノード名を分割
                    tokenize $createdNode "|" $tokens;

                    string $basename = $tokens[`size($tokens)` - 1];

                    // 末尾の _INSTALOD を削除
                    $basename = substituteAllString($basename, "_INSTALOD", "");
                    string $lod_suffix = `match "_lod[0-9]$" $basename`;

                    // _lod? が末尾についている場合は削除
                    if($lod_suffix != "")
                    {
                       $basename = substituteAllString($basename, $lod_suffix, "");
                    }

                    // リネーム先のノード名
                    string $newName = $basename + "_" + $lodLevel;

                    // リネーム
                    rename $createdNode $newName;
                }


                // _lod0 がついたグループノードをリネーム
                string $allTransformNodes[] = `listRelatives -allDescendents -noIntermediate -type "transform" -f $dupedTargetModelNode`;
                string $transformNode;

                for($transformNode in $allTransformNodes)
                {
                    if(endsWith($transformNode, "_lod0"))
                    {
                        // ノード名を分割
                        string $tokens[];
                        tokenize $transformNode "|" $tokens;

                        string $basename = $tokens[`size($tokens)` - 1];

                        string $newName = substituteAllString($basename, "_lod0", ("_" + $lodLevel));

                        rename $transformNode $newName;
                    }
                }

                // lodGroup ノードの階層に入れる
                $dupedTargetModelNode = `parent $dupedTargetModelNode $lodGroupNode`;

                // lod ノードが存在すれば削除
                string $lodNode = shr_instaLodModelCreateTool_getLodNode($selItem, $lodLevel);

                if($lodNode != "")
                {
                    delete $lodNode;
                }

                // リネーム
                $dupedTargetModelNode[0] = `rename $dupedTargetModelNode $lodLevel`;

                // フルパス名に
                $dupedTargetModelNode = `ls -long $dupedTargetModelNode[0]`;

                // 作成LOD ノードリストに追加
                $lodNodes[`size($lodNodes)`] = $dupedTargetModelNode[0];

                // カスタムアトリビュートを追加
                shr_instaLodModelCreateTool_setCustomAttribute($lodValue, `optionMenu -q -v $UOM_REDUCTION_PROFILE_SHR_INSTALOD[$index]`, $dupedTargetModelNode[0]);
            }

            $index += 1;
        }

        // lod ノード並べ替え
        shr_instaLodModelCreateTool_reorderLodNodes($selItem);

        // lodGroup 表示設定を全てshow に
        shr_nodeHierarchyAssistant_setLodDisplayLevelToShow($lodGroupNode);
    }

    progressWindow -endProgress;

    select -r $lodNodes;

    // lod 情報更新
    shr_instaLodModelCreateTool_updateLodInfo(0);
}

///////////////////////////////////////
// 指定したメッシュリストから指定したヘアタイプのメッシュリストを取得
///////////////////////////////////////
global proc string[] shr_instaLodModelCreateTool_getHairMeshes(int $hairType, string $meshNodes[])
{
    // $hairType:
    //      0: long_hair
    //      1: short_hair

    string $hairMeshStr[] = {"*longhair*", "*shorthair*"};

    string $hairMeshes[];

    string $meshNode;

    for($meshNode in $meshNodes)
    {
        // メッシュノードベース名
        string $tokens[] = stringToStringArray($meshNode, "|");
        string $name = $tokens[`size($tokens)` - 1];

        if(`gmatch $name $hairMeshStr[$hairType]` != 0)
        {
            $hairMeshes[`size($hairMeshes)`] = $meshNode;
        }
    }

    return $hairMeshes;
}


///////////////////////////////////////
// 指定したアセットのlodGroup ノードを取得
///////////////////////////////////////
global proc string shr_instaLodModelCreateTool_getLodGroupNode(string $rootNode)
{
    string $elm;

    // ルートノードの子ノードを取得
    string $childNodes[] = `listRelatives -fullPath -children $rootNode`;

    // mesh という名前のlodGroup ノードを取得
    for($elm in $childNodes)
    {
        if(endsWith($elm, "|mesh") && (`nodeType $elm` == "lodGroup"))
        {
            return $elm;
        }
    }

    return "";
}

///////////////////////////////////////
// 指定したアセットの指定したlod ノードを取得
///////////////////////////////////////
global proc string shr_instaLodModelCreateTool_getLodNode(string $rootNode, string $lodLevel)
{
    // lodGroup ノードを取得
    string $lodGroupNode = shr_instaLodModelCreateTool_getLodGroupNode($rootNode);

    if($lodGroupNode == "")
    {
        return "";
    }

    // lodGroup ノードの子ノードを取得
    string $childNodes[] = `listRelatives -fullPath -children $lodGroupNode`;

    string $elm;

    // lod0 ノード取得
    for($elm in $childNodes)
    {
        if(endsWith($elm, ("|" + $lodLevel)))
        {
            return $elm;
        }
    }

    return "";
}

///////////////////////////////////////
// カスタムアトリビュート セット
///////////////////////////////////////
global proc shr_instaLodModelCreateTool_setCustomAttribute(float $value, string $profile, string $node)
{
    // カスタムアトリビュートのリスト
    global string $CUSTOM_ATTRIBUTES_SHR_INSTALOD[];

    // カスタムアトリビュートがなければ作成
    if(`attributeExists $CUSTOM_ATTRIBUTES_SHR_INSTALOD[0] $node` == false)
    {
       addAttr -longName $CUSTOM_ATTRIBUTES_SHR_INSTALOD[0] -attributeType "float" $node;
    }

    if(`attributeExists $CUSTOM_ATTRIBUTES_SHR_INSTALOD[1] $node` == false)
    {
       addAttr -longName $CUSTOM_ATTRIBUTES_SHR_INSTALOD[1] -dt "string" $node;
    }

    // アトリビュート値を設定
    setAttr ($node + "." + $CUSTOM_ATTRIBUTES_SHR_INSTALOD[0]) $value;
    setAttr ($node + "." + $CUSTOM_ATTRIBUTES_SHR_INSTALOD[1]) -type "string" $profile;
}

///////////////////////////////////////
// カスタムアトリビュート ゲット
///////////////////////////////////////
global proc string[] shr_instaLodModelCreateTool_getCustomAttribute(string $node)
{
    string $result[] = {"情報なし", "情報なし"};

    // カスタムアトリビュートのリスト
    global string $CUSTOM_ATTRIBUTES_SHR_INSTALOD[];

    // カスタムアトリビュートがない場合
    if(`attributeExists $CUSTOM_ATTRIBUTES_SHR_INSTALOD[0] $node` == true)
    {
        // アトリビュート値を取得
        $result[0] = `getAttr ($node + "." + $CUSTOM_ATTRIBUTES_SHR_INSTALOD[0])`;
    }

    // カスタムアトリビュートがない場合
    if(`attributeExists $CUSTOM_ATTRIBUTES_SHR_INSTALOD[1] $node` == true)
    {
        // アトリビュート値を取得
        $result[1] = `getAttr ($node + "." + $CUSTOM_ATTRIBUTES_SHR_INSTALOD[1])`;
    }

    return $result;
}

///////////////////////////////////////
// lod ノード並べ替え
///////////////////////////////////////
global proc shr_instaLodModelCreateTool_reorderLodNodes(string $rootNode)
{
    // ノードの並び
    string $orderDifinitions[] = {
        "lod0"
    };

    // lod レベル
    global string $LOD_LEVELS_SHR_INSTALOD[];

    // ノードの並び
    $orderDifinitions = stringArrayCatenate($orderDifinitions, $LOD_LEVELS_SHR_INSTALOD);

    string $lodGroupNode = shr_instaLodModelCreateTool_getLodGroupNode($rootNode);

    // 子ノード取得
    string $children[] = `listRelatives -f -c $lodGroupNode`;

    // 並べ替え順ターゲット
    string $orderTargets[];

    string $orderDifinition;

    for($orderDifinition in $orderDifinitions)
    {
        string $child;

        for($child in $children)
        {
            if(endsWith($child, $orderDifinition))
            {
                $orderTargets[`size($orderTargets)`] = $orderDifinition;

                break;
            }
        }
    }

    string $orderTarget;

    int $index;

    for($orderTarget in $orderTargets)
    {
        if($orderTarget != "lod0" && startsWith($orderTarget, "lod"))
        {
            string $preOrderTarget = $orderTargets[$index - 1];

            $orderTarget = "|" + $rootNode + "|mesh|" + $orderTarget;
            $preOrderTarget = "|" + $rootNode + "|mesh|" + $preOrderTarget;

            int $a = stringArrayFind($preOrderTarget, 0, $children);
            int $b = stringArrayFind($orderTarget, 0, $children);

            int $step;

            if($a < $b)
            {
                $step = $a - $b + 1;
            }
            else
            {
               $step = $a -$b;
            }

            // 並べ替え
            reorder -relative $step $orderTarget;
        }

        $index += 1;

        // 並べ替え後の子ノード取得
        $children = `listRelatives -f -c $lodGroupNode`;
    }
}

