///////////////////////////////////////
// 一括設定 最大LOD オプションメニュー コールバック
///////////////////////////////////////
global proc shr_instaLodModelCreateTool_setMaxLodLevel()
{
    // lod レベル
    global string $LOD_LEVELS_SHR_INSTALOD[];

    // lod チェックボックス
    global string $UCB_LOD_SHR_INSTALOD[];

    // lod rowColumn レイアウト
    global string $URCL_LOD_SHR_INSTALOD[];

    // 最大LOD レベル
    string $maxLodLevel = `optionMenu -q -v uOm_maxLodLevel_shr_instaLodModelCreateTool`;

    int $index = stringArrayFind($maxLodLevel, 0, $LOD_LEVELS_SHR_INSTALOD);

    string $checkBox;
    int $count;

    // 最大LOD レベルまでのチェックボックスをオン、UI をenable に
    for($checkBox in $UCB_LOD_SHR_INSTALOD)
    {
        int $value = ($count <= $index);

        checkBox -e -v $value $checkBox;

        rowColumnLayout -e -en $value $URCL_LOD_SHR_INSTALOD[$count];

        $count += 1;
    }
}

///////////////////////////////////////
// LOD 値 を一括設定
///////////////////////////////////////
global proc shr_instaLodModelCreateTool_setLodValues(string $slider)
{
    // lod レベル
    global string $LOD_LEVELS_SHR_INSTALOD[];

    // lod 削減値 int スライダー
    global string $UISG_LOD_VALUE_SHR_INSTALOD[];

    // 最大LOD レベル取得
    string $maxLodLevel = `optionMenu -q -v uOm_maxLodLevel_shr_instaLodModelCreateTool`;

    // 開始、終了、バイアス値取得
    float $start = 100;
    float $end = `floatSliderGrp -q -v uIsg_endValue_shr_instaLodModelCreateTool`;
    string $easeType = `optionMenu -q -v uOm_easeType_shr_instaLodModelCreateTool`;
    float $bias = `floatSliderGrp -q -v uFsg_bias_shr_instaLodModelCreateTool`;

    int $levels = stringArrayFind($maxLodLevel, 0, $LOD_LEVELS_SHR_INSTALOD) + 1;
    int $i = 0;

    for($i; $i < $levels ; $i++)
    {
        float $pos = (1.0 /($levels) * ($i+1));

        float $value = shr_instaLodModelCreateTool_easing($pos, $start, $end, $easeType, $bias);

        floatSliderGrp -e -v $value $UISG_LOD_VALUE_SHR_INSTALOD[$i];
    }
}

///////////////////////////////////////
// Easing 計算
///////////////////////////////////////
global proc float shr_instaLodModelCreateTool_easing(float $pos, float $start, float $end, string $easeType, float $bias)
{
    float $result;

    float $vEase;

    float $difference = $end - $start;

    $bias = -1 * $bias;

    // 線形値
    float $vLinear = $pos * $difference + $start;

    if($easeType == "線形")
    {
        // 線形の時はそのまま
        $result = $vLinear;
    }
    else
    {
        // Ease In
        if($bias < 0)
        {
            // 2次
            if($easeType == "2次")
            {
                $vEase = $difference * `pow $pos 2` + $start;
            }
            // 3次
            else if($easeType == "3次")
            {
                $vEase = $difference * `pow $pos 3` + $start;
            }
            // 4次
            else if($easeType == "4次")
            {
                $vEase = $difference * `pow $pos 4` + $start;

            }
            // 5次
            else if($easeType == "5次")
            {
                $vEase = $difference * `pow $pos 5` + $start;

            }
            // 指数
            else if($easeType == "指数")
            {
                $vEase = $difference * `pow 2 (10*($pos-1))` + $start;

            }
            // 円形
            else if($easeType == "円形")
            {
                $vEase = -1 * $difference * (sqrt(1- `pow $pos 2`) - 1) + $start;
            }
        }
        // Ease Out
        else if($bias >= 0)
        {
            // 2次
            if($easeType == "2次")
            {
                $vEase = -1 * $difference * $pos * ($pos - 2) + $start;
            }
            // 3次
            else if($easeType == "3次")
            {
                $pos = $pos - 1;
                $vEase = $difference * (`pow $pos 3` + 1) + $start;
            }
            // 4次
            else if($easeType == "4次")
            {
                $pos = $pos - 1;
                $vEase = -1 * $difference * (`pow $pos 4` - 1) + $start;
            }
            // 5次
            else if($easeType == "5次")
            {
                $pos = $pos - 1;
                $vEase = $difference * (`pow $pos 5` + 1) + $start;
            }
            // 指数
            else if($easeType == "指数")
            {
                $vEase = $difference * (-1 * (`pow 2 (-10 * $pos)`) + 1) + $start;
            }
            // 円形
            else if($easeType == "円形")
            {
                $pos = $pos - 1;
                $vEase = $difference * sqrt(1- `pow $pos 2`) + $start;
            }
        }

        // イージングした値と線形値をバイアス値を使って合成
        $result = $vEase * abs($bias) + $vLinear * (1 - abs($bias));
    }

    return $result;
}

