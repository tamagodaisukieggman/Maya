global proc shr_instaLodModelCreateTool_resetSettings()
{
    // InstaLOD ウィンドウ名
    global string $INSTALOD_CONTROL_ID_WORKSPACE;

    // InstaLOD ウィンドウが存在しなければ
    if(`workspaceControl -exists $INSTALOD_CONTROL_ID_WORKSPACE` == false)
