global proc shr_instaLodModelCreateTool_updateList()
{
    // 現在リストで選択している項目
    string $selItems[] = `textScrollList -q -selectItem uTsl_asset_shr_instaLodModelCreateTool`;

    textScrollList -e -removeAll uTsl_asset_shr_instaLodModelCreateTool;

    // 現在シーンにある全ての ルートノードを取得
    string $rootNodes[] = `ls "|*"`;

    // 対象ノードリストを取得
    string $targetNodes[] = shr_instaLodModelCreateTool_getAllTargetNodes($rootNodes);

    string $targetNode;

    // テキストスクロールリストに項目を追加
    for($targetNode in $targetNodes)
    {
        textScrollList -e -append $targetNode uTsl_asset_shr_instaLodModelCreateTool;
    }

    string $item;

    // もともと選択していた項目を再選択
    for($item in $selItems)
    {
        if(stringArrayContains($item, $targetNodes))
        {
            textScrollList -e -selectItem $item uTsl_asset_shr_instaLodModelCreateTool;
        }
    }
}

